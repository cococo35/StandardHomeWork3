<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.DetailActivity">

    <TextView
        android:id="@+id/tx_detail_nametx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:text="이름: " />

    <TextView
        android:id="@+id/tx_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tx_detail_nametx"
        app:layout_constraintTop_toTopOf="@id/tx_detail_nametx"
        app:layout_constraintBottom_toBottomOf="@id/tx_detail_nametx"
        android:text="name"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tx_detail_numbertx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tx_detail_nametx"
        app:layout_constraintTop_toBottomOf="@id/tx_detail_nametx"
        android:layout_marginTop="10dp"
        android:text="카드 번호: "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tx_detail_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="number"
        app:layout_constraintStart_toEndOf="@id/tx_detail_numbertx"
        app:layout_constraintTop_toTopOf="@id/tx_detail_numbertx"
        app:layout_constraintBottom_toBottomOf="@id/tx_detail_numbertx" />

    <TextView
        android:id="@+id/tx_detail_expirationtx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="유효기간: "
        app:layout_constraintStart_toStartOf="@id/tx_detail_numbertx"
        app:layout_constraintTop_toBottomOf="@id/tx_detail_numbertx"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tx_detail_expiration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="expiration"
        app:layout_constraintStart_toEndOf="@id/tx_detail_expirationtx"
        app:layout_constraintTop_toTopOf="@id/tx_detail_expirationtx"
        app:layout_constraintBottom_toBottomOf="@id/tx_detail_expirationtx" />

    <TextView
        android:id="@+id/tx_detail_pricetx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="가격: "
        app:layout_constraintStart_toStartOf="@id/tx_detail_expirationtx"
        app:layout_constraintTop_toBottomOf="@id/tx_detail_expirationtx"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tx_detail_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="price"
        app:layout_constraintStart_toEndOf="@id/tx_detail_pricetx"
        app:layout_constraintTop_toTopOf="@id/tx_detail_pricetx"
        app:layout_constraintBottom_toBottomOf="@id/tx_detail_pricetx" />

</androidx.constraintlayout.widget.ConstraintLayout>